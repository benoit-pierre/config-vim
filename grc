
" Colorscheme.
let g:moria_style='black'
set background=dark
colorscheme moria

" Font.
if has('win32')
  " Since selecting an unavailable font will crash the GUI in Windows, and the
  " default font looks ok, don't override it...
else
  set guifont=Bitstream\ Vera\ Sans\ Mono\ Bold\ 10
endif

" Deactivate cursor blinking.
set guicursor=a:blinkon0

" No toolbar, use console dialogs instead of popup dialogs for simple choices.
set guioptions-=T
set guioptions+=c

" vim: ft=vim sw=2
