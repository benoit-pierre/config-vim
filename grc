
" Colorscheme.
let g:moria_style='black'
set background=dark
colorscheme moria

" Font.
set guifont=Bitstream\ Vera\ Sans\ Mono\ Bold\ 10

" Deactivate cursor blinking.
set guicursor=a:blinkon0

" No toolbar, use console dialogs instead of popup dialogs for simple choices.
set guioptions-=T
set guioptions+=c

