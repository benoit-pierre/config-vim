
language C

" Not VI compatible.
set nocompatible

" No wrapping.
set nowrap

" Show line numbers.
set number
set numberwidth=5

" Allow backspacing over everything in insert mode.
set backspace=2

" Use status line to display possible completions.
set wildmenu
set wildmode=list:longest,full

" Syntax highlighting.
syntax on

" vim: ft=vim sw=2
